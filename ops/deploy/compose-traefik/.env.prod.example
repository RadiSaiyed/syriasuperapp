REGISTRY=docker.io
ORG=your_dockerhub_user
TAG=latest

# Domain and TLS email
BASE_DOMAIN=example.com
TRAEFIK_ACME_EMAIL=ops@example.com

# CORS (set explicit origins in prod)
COMMON_ALLOWED_ORIGINS=https://*.${BASE_DOMAIN}
PAYMENTS_ALLOWED_ORIGINS=https://payments.${BASE_DOMAIN}
TAXI_ALLOWED_ORIGINS=https://taxi.${BASE_DOMAIN}

# Core secrets
PAYMENTS_JWT_SECRET=change_me
TAXI_JWT_SECRET=change_me
AUTOMARKET_JWT_SECRET=change_me
BUS_JWT_SECRET=change_me
CHAT_JWT_SECRET=change_me
COMMERCE_JWT_SECRET=change_me
DOCTORS_JWT_SECRET=change_me
FOOD_JWT_SECRET=change_me
FREIGHT_JWT_SECRET=change_me
JOBS_JWT_SECRET=change_me
STAYS_JWT_SECRET=change_me
UTILITIES_JWT_SECRET=change_me

# Shared internal auth between services (if used)
PAYMENTS_INTERNAL_SECRET=change_me

# Admin tokens (hashed digests recommended)
# Payments admin endpoints on /admin require either ADMIN_TOKEN or ADMIN_TOKEN_SHA256
PAYMENTS_ADMIN_TOKEN_SHA256=

# Taxi admin token protects maintenance endpoints (e.g., reaper)
# Provide both a plain token for the reaper sidecar and the SHA-256 digest for the API.
TAXI_ADMIN_TOKEN=
TAXI_ADMIN_TOKEN_SHA256=

# Optional fee wallet (E.164 phone)
FEE_WALLET_PHONE=

# Taxi admin + reaper
TAXI_REAPER_INTERVAL_SECS=60
TAXI_REAPER_TIMEOUT_SECS=120
TAXI_REAPER_LIMIT=200
TAXI_REAPER_RELAX_WALLET=false

# Chat specific
# OTP_MODE is set to redis in compose; ensure REDIS_URL stays default or point to external Redis
# CHAT_PUBLIC_BASE_URL will resolve to https://chat.${BASE_DOMAIN}

# Maps provider (Taxi)
GOOGLE_MAPS_API_KEY_TAXI=
