{
  "title": "BFF Overview",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Requests (1m)",
      "gridPos": {"x":0, "y":0, "w":6, "h":4},
      "targets": [
        {"expr": "sum(increase(bff_requests_total[1m]))", "legendFormat": "all"}
      ]
    },
    {
      "type": "graph",
      "title": "Requests by status",
      "gridPos": {"x":6, "y":0, "w":18, "h":8},
      "targets": [
        {"expr": "sum by (status) (rate(bff_requests_total[5m]))", "legendFormat": "{{status}}"}
      ]
    },
    {
      "type": "graph",
      "title": "Latency (p50/p90/p99)",
      "gridPos": {"x":0, "y":8, "w":24, "h":8},
      "targets": [
        {"expr": "histogram_quantile(0.5, sum(rate(bff_request_latency_seconds_bucket[5m])) by (le))", "legendFormat": "p50"},
        {"expr": "histogram_quantile(0.9, sum(rate(bff_request_latency_seconds_bucket[5m])) by (le))", "legendFormat": "p90"},
        {"expr": "histogram_quantile(0.99, sum(rate(bff_request_latency_seconds_bucket[5m])) by (le))", "legendFormat": "p99"}
      ]
    }
  ]
}

