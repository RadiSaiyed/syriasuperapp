ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8080
DB_URL=postgresql+psycopg2://postgres:postgres@db:5432/payments
JWT_SECRET=<REPLACE_WITH_SECRET>
JWT_EXPIRES_MINUTES=43200
ALLOWED_ORIGINS=*
AUTO_CREATE_SCHEMA=true
INTERNAL_API_SECRET=<REPLACE_WITH_SECRET>
ADMIN_TOKEN=<REPLACE_WITH_SECRET>
DEV_ENABLE_TOPUP=true
DEV_RESET_USER_STATE_ON_LOGIN=true
DEFAULT_CURRENCY=SYP
# Starting credit in cents (100000 SYP default)
STARTING_CREDIT_CENTS=10000000
QR_EXPIRY_MINUTES=15
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_BOOST=2
RATE_LIMIT_BACKEND=memory
REDIS_URL=redis://redis:6379/0
RATE_LIMIT_REDIS_PREFIX=rl
OTP_MODE=dev
# Webhook worker (dev opt-in): set >0 to enable background delivery loop
WEBHOOK_WORKER_POLL_SECS=0
# Webhook backoff tuning
WEBHOOK_BASE_DELAY_SECS=2
WEBHOOK_BACKOFF_FACTOR=2
WEBHOOK_MAX_ATTEMPTS=5
# Celery-based webhook processor (production-grade)
WEBHOOK_PROCESS_INTERVAL_SECS=10
CELERY_BROKER_URL=redis://redis:6379/0
KYC_L0_TX_MAX_CENTS=100000000
KYC_L0_DAILY_MAX_CENTS=500000000
KYC_L1_TX_MAX_CENTS=500000000
KYC_L1_DAILY_MAX_CENTS=2000000000
KYC_MIN_LEVEL_FOR_MERCHANT_PAY=1
KYC_MIN_LEVEL_FOR_MERCHANT_QR=1
FEE_WALLET_PHONE=+963999999999
MERCHANT_FEE_BPS=150
CASHIN_FEE_BPS=100
CASHOUT_FEE_BPS=500

# Uvicorn runtime tuning
UVICORN_WORKERS=1
UVICORN_LOG_LEVEL=info
